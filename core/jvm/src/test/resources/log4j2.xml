<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp" packages="">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="${env:LOG_LEVEL:-WARN}">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
